<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical"
        tools:context=".ProfilPekerja">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fotoprofilpekerja"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nama"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/namapekerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="8"
            android:hint=""
            android:inputType="textCapSentences|textPersonName"
            android:singleLine="true"
            android:text="Pardin Supardi"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nomor Telepon"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nomortelpon_pekerja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:ems="8"
            android:hint=""
            android:inputType="phone"
            android:singleLine="true"
            android:text="081234565678"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Umur"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/umur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="8"
            android:hint=""
            android:enabled="false"
            android:inputType="numberSigned"
            android:singleLine="true"
            android:maxLength="3"
            android:text="43"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Jenis Kelamin"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/jenis_kelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="8"
            android:enabled="false"
            android:hint=""
            android:inputType="text"
            android:singleLine="true"
            android:text="Pria"
            android:textSize="20sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lokasi"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="8"
            android:hint=""
            android:enabled="false"
            android:inputType="textPostalAddress"
            android:singleLine="true"
            android:text="Jl Kejaksaan No.31, Medan"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Keahlian"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/roundedbordergreen"
                android:text="Bubut"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"
                />

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/roundedbordergreen"
                android:text="Mekanik"
                android:layout_marginLeft="8dp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"/>

            <Button
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/roundedbordergreen"
                android:text="Pengolahan"
                android:layout_marginLeft="8dp"
                android:textColor="#ffffff"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Informasi Tambahan"
            android:textColor="@android:color/darker_gray"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/informasi_tambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:ems="8"
            android:hint=""
            android:inputType="textLongMessage"
            android:enabled="false"
            android:text="Pernah Bekerja di Pabrik Sentosa 3 tahun"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_verifikasi_akun"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundedbuttonblue"
                android:text="Verifikasi Akun"
                android:textColor="#003B60" />

            <Button
                android:id="@+id/btn_edit_profil"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/roundedbuttonblue"
                android:text="Edit Profil"
                android:textColor="#003B60" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>